<h2>Add new student.</h2>
<form class="" action="/students" method="post">
  <label for="first_name_input">First name:</label>
  <input id="first_name_input" type="text" name="first_name" value="">
  <label for="last_name_input">Last name:</label>
  <input id="last_name_input" type="text" name="last_name" value="">
  <select id="house_select" class="" name="house_id">
    <% @houses.each do |house|  %>
    <option value="<%= house.id %>"><%= house.name %></option>
    <% end %>
  </select>

  <label for="age_input">Age:</label>
  <input id="age_input" type="number" min="12" name="age" value="">

  <input type="submit" name="" value="create student">

</form>
